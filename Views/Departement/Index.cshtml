@model IEnumerable<GesEmpAspNet.Models.Departement>

@{
    ViewData["Title"] = "Liste des Departements";
    var currentPage = ViewBag.CurrentPage;
    var totalPages = ViewBag.TotalPages;
}

<div class="container-fluid mt-4">
    <h1 class="mb-4">Liste des Departements</h1>
    
    <div class="row mb-3">
        <div class="col-md-8">
            <input type="text" class="form-control" placeholder="Rechercher un compte..." style="display:inline-block; width:70%;" />
            <button class="btn btn-primary ms-2"><i class="bi bi-search"></i></button>
        </div>
        <div class="col-md-4 text-end">
            <button class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Créer
            </button>
        </div>
    </div>
    
    <div class="table-responsive">
        <table class="table table-hover">
            <thead class="table-light">
                <tr>
                    <th>ID</th>
                    <th>Nom</th>
                    <th>NbreEmploye</th>
                    <th>Date de Création</th>
                    <th>Statut</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var dept in Model)
                {
                    <tr>
                        <td>@dept.Id</td>
                        <td>@dept.Nom</td>
                        <td>@dept.NbreEmploye</td>
                        <td>@dept.DateCreation.ToString("dd/MM/yyyy")</td>
                        <td><span class="badge bg-success">@dept.Statut</span></td>
                        <td>
                            <a asp-controller="Employe" asp-action="Index" asp-route-departementId="@dept.Id" class="btn btn-sm btn-info text-white">
                                <i class="bi bi-people"></i> Employes
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    
    <!-- Pagination -->
    <nav aria-label="Page navigation" class="mt-4">
        <ul class="pagination justify-content-center">
            <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="@(currentPage - 1)">Précédent</a>
            </li>
            
            @for (int i = 1; i <= totalPages; i++)
            {
                <li class="page-item @(i == currentPage ? "active" : "")">
                    <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
                </li>
            }
            
            <li class="page-item @(currentPage >= totalPages ? "disabled" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="@(currentPage + 1)">Suivant</a>
            </li>
        </ul>
    </nav>
</div>
